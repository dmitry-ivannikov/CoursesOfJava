DROP TABLE myTable;
DESC myTable;
INSERT INTO myTable VALUES(1, 'Коля', 'Фамин');
INSERT INTO myTable(id, fname) VALUES (1, 'Петя');
SELECT * FROM myTable;
SELECT fname, lname FROM myTable;

